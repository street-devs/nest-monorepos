{
  "compilerOptions": {
    "module": "commonjs",
    "strict": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": false,
    "target": "ESNext",
    "lib": [
      "ESNext",
      "dom"
    ],
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noFallthroughCasesInSwitch": false,
    "forceConsistentCasingInFileNames": false,
    "resolveJsonModule": true,
    "paths": {
      "@lib/nest-app": [
        "libs/nest-app/src"
      ],
      "@lib/nest-app/*": [
        "libs/nest-app/src/*"
      ],
      "@lib/common": [
        "libs/common/src"
      ],
      "@lib/common/*": [
        "libs/common/src/*"
      ],
      "@lib/monitoring": [
        "libs/monitoring/src"
      ],
      "@lib/monitoring/*": [
        "libs/monitoring/src/*"
      ]
    }
  }
}
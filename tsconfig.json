{
  "compilerOptions": {
    "module": "commonjs",
    "strict": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noFallthroughCasesInSwitch": false,
    "forceConsistentCasingInFileNames": false,
    "paths": {
      "@lib/nest-app": [
        "libs/nest-app/src"
      ],
      "@lib/nest-app/*": [
        "libs/nest-app/src/*"
      ],
      "@lib/common": [
        "libs/common/src"
      ],
      "@lib/common/*": [
        "libs/common/src/*"
      ],
      "@lib/monitoring": [
        "libs/monitoring/src"
      ],
      "@lib/monitoring/*": [
        "libs/monitoring/src/*"
      ]
    }
  }
}
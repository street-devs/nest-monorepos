{
  "name": "nest-monorepos",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "USE_PRETTY_LOG=true nest start --watch",
    "start:debug": "USE_PRETTY_LOG=true nest start --debug --watch",
    "start:prod": "node dist/apps/cms/main",
    "lint": "eslint \"{apps,libs}/**/*.ts\"",
    "lint:fix": "eslint \"{apps,libs}/**/*.ts\" --fix",
    "test": "jest --no-watchman",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage --no-watchman",
    "test:debug": "USE_PRETTY_LOG=true node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config jest-e2e.config.ts --forceExit --no-watchman"
  },
  "dependencies": {
    "@fastify/cookie": "^9.4.0",
    "@fastify/static": "^7.0.4",
    "@fastify/multipart": "^8.3.0",
    "@nestjs/common": "^10.4.1",
    "@nestjs/core": "^10.4.1",
    "@nestjs/cqrs": "^10.2.7",
    "@nestjs/graphql": "^12.2.0",
    "@nestjs/event-emitter": "^2.0.4",
    "@nestjs/platform-express": "^10.4.1",
    "@nestjs/platform-fastify": "^10.4.1",
    "@nestjs/swagger": "^7.4.0",
    "nestjs-form-data": "^1.9.91",
    "fastify": "4.28.1",
    "dotenv": "^16.4.5",
    "dotenv-expand": "^11.0.6",
    "nestjs-pino": "^4.1.0",
    "pino": "^9.4.0",
    "pino-pretty": "^11.2.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.5",
    "@nestjs/schematics": "^10.1.4",
    "@nestjs/testing": "^10.4.1",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.5.4",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.4.0",
    "@typescript-eslint/parser": "^8.4.0",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "light-my-request": "^6.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.5.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@lib/nest-app(|/.*)$": "<rootDir>/libs/nest-app/src/$1",
      "^@lib/common(|/.*)$": "<rootDir>/libs/common/src/$1"
    }
  }
}
